vrrp_script chk_haproxy {
  script "/usr/bin/pgrep haproxy"
  interval 2
  weight 2
}

vrrp_instance VI_1 {
  state BACKUP
  interface {{ ansible_default_ipv4.interface }}
  virtual_router_id 101
  priority {{ priority_id }}
  advert_int 1

  authentication {
    auth_type PASS
    auth_pass {{ hostvars['PASSWORD_HOLDER']['KEEP_AVALIVE_PASSWORD_AUTH'] }}
  }

  virtual_ipaddress {
    {{ LOADBALANCER }}
  }

 track_script {
    chk_haproxy
 }

}
